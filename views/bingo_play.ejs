      border-radius: 5px;
    }

    /* Info Display Container */
    .info-display {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      background-color: #d3cdcd;
      border-radius: 10px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      text-align: center;
    }

    /* Winner Heading */
    .info-display .winner {
      font-size: 30px;
      color: #28a745;
      /* Green for winner */
      font-weight: bold;
    }

    /* Betbirr Heading */
    .info-display .betbirr {
      font-size: 20px;
      color: #007bff;
      /* Blue for bet amount */
      font-weight: 600;
    }

