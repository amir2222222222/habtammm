            // 🔁 Handle error queue globally (outside Start click)
              socket.on("errorMsg", (msg) => {
                errorQueue.push(msg);
                showNextError();
              });

              function showNextError() {
                if (isShowingError || errorQueue.length === 0) return;
                isShowingError = true;
                const msg = errorQueue.shift();
                alert(`⚠️ ${msg}`);
                setTimeout(() => {
