/* Common button base style */
.game-btn {
  font-family: 'Comic Sans MS', 'Cooper Black', sans-serif;
  font-size: 1.3rem;
  font-weight: bold;
  padding: 20px;
  border: none;
  cursor: pointer;
  text-shadow: 2px 2px rgba(0, 0, 0, 0.3);
  color: white;
  position: relative;
  transition: all 0.2s ease-in-out;
  border: 5px solid white;
  flex: 1;
  overflow: hidden;
  background-size: 200% 200%;
  animation: bgMove 6s ease infinite;
  box-shadow: inset 0 0 12px rgba(255, 255, 255, 0.5),
              0 6px 0 rgba(0, 0, 0, 0.2),
              0 10px 15px rgba(0, 0, 0, 0.3);
}

/* Glossy circle overlay */
.game-btn::after {
  content: "";
  position: absolute;
  top: 12%;
  left: 15%;
  width: 25%;
  height: 25%;
  background: rgb(255, 255, 255);
  border-radius: 50%;
  pointer-events: none;
  filter: blur(1px);
}

/* Animated shine effect */
.game-btn::before {
  content: "";
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, rgba(255,255,255,0.2) 0%, transparent 40%, transparent 60%, rgba(255,255,255,0.2) 100%);
  animation: shine 3s linear infinite;
}

/* PLAY button style */
.play {
  border-radius: 15px;
  padding: 20px 40px;
  background: linear-gradient(135deg, #ffe100, #ff8c00, #ff4081);
  border: 4px solid #fff176;
  flex: 2;
}

/* Circular styles */
.shuffle, .start, .pause, .reset {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  padding: 0;
}

/* Button-specific gradients */
.shuffle {
  background: linear-gradient(135deg, #00e5ff, #00b0ff, #0288d1);
  border: 4px solid #0277bd;
}

.start {
  background: linear-gradient(135deg, #76ff03, #00e676, #1de9b6);
  border: 4px solid #00c853;
}

.pause {
  background: linear-gradient(135deg, #fff176, #fbc02d, #f57f17);
  border: 4px solid #ff9800;
}

.reset {
  background: linear-gradient(135deg, #ff4081, #e91e63, #d50000);
  border: 4px solid #c51162;
}

/* Hover */
.game-btn:hover {
  transform: scale(1.05);
  box-shadow: inset 0 0 20px rgba(10, 0, 0, 1);
           
}

/* Active (Pressed) */
.game-btn:active {
  transform: scale(0.95);
  box-shadow: inset 0 0 20px rgba(10, 0, 0, 1);
}

/* Animation for shine */
@keyframes shine {
  0% { transform: rotate(0deg) translateX(-100%) scale(1); }
  100% { transform: rotate(360deg) translateX(100%) scale(1); }
}

/* Background movement animation */
@keyframes bgMove {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}


