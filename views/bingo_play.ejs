        <button class="cart-submite">Check</button>
        <button id="lock" class="lock">lock</button>
      </div>
    </div>
  </div>

  <div class="main-panel">
    <div class="top-board">
      <div class="bingo-grid">
        <div class="bingo-labels">
          <div>B</div>
          <div>I</div>
          <div>N</div>
          <div>G</div>
          <div>O</div>
        </div>
